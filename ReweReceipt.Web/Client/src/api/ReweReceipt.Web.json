  "components": {
    "schemas": {
      "Article": {
        "required": [
          "id",
          "productName",
          "imageUrl",
          "receipts"
        ],
        "type": "object",
        "properties": {
          "id": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "productName": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "receipts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ArticleReceipt"
            }
          }
        }
      },
      "ArticleReceipt": {
        "required": [
          "receiptId",
          "timeStamp",
          "quantity",
          "price"
        ],
        "type": "object",
        "properties": {
          "receiptId": {
            "type": "string",
            "format": "uuid"
          },
          "timeStamp": {
            "type": "string",
            "format": "date-time"
          },
          "quantity": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "float"
          },
          "price": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          }
        }
      },
      "GetResponse": {
        "required": [
          "isFetching",
          "receiptsCount",
          "articlesCount",
          "lastError"
        ],
        "type": "object",
        "properties": {
          "isFetching": {
            "type": "boolean"
          },
          "receiptsCount": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "articlesCount": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "lastError": {
            "type": [
              "null",
              "string"
            ]
          }
        }
      },
      "Market": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "street": {
            "type": "string"
          },
          "zipCode": {
            "type": "string"
          },
          "city": {
            "type": "string"
          }
        }
      },
      "ReceiptArticle": {
        "required": [
          "id",
          "nan",
          "productName",
          "quantity",
          "price"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "nan": {
            "pattern": "^-?(?:0|[1-9]\\d*)$",
            "type": [
              "integer",
              "string"
            ],
            "format": "int32"
          },
          "productName": {
            "type": "string"
          },
          "quantity": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "float"
          },
          "price": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          }
        }
      },
      "ReceiptBrief": {
        "required": [
          "id",
          "market",
          "date",
          "total"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "market": {
            "$ref": "#/components/schemas/Market"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "total": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          }
        }
      },
      "ReceiptFull": {
        "required": [
          "id",
          "market",
          "date",
          "total",
          "paybackFlag",
          "cancelled",
          "articles"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "market": {
            "$ref": "#/components/schemas/Market"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "total": {
            "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
            "type": [
              "number",
              "string"
            ],
            "format": "double"
          },
          "paybackFlag": {
            "type": "boolean"
          },
          "cancelled": {
            "type": "boolean"
          },
          "articles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReceiptArticle"
            }
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Article"
    },
    {
      "name": "Fetch"
    },
    {
      "name": "Receipt"
    }
  ]
